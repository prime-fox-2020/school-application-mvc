<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>EDIT STUDENT</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <script src='main.js'></script>
</head>
<body>
    <%let fname = ''%>
    <%let lname = ''%>
    <%let email = ''%>
    <%let birthdate = ''%>
    <% for(let a = 0; a < data.length; a++){%>
        <%if(data[a].id == id){%>
            <% fname = data[a].first_name %>
            <% lname = data[a].last_name %>
            <% email = data[a].email %>
            <% birthdate = data[a].birthdate %>
            <% break %>
        <% }%>
    <% }%>
    <h1>Edit Student</h1>
    <form action="/students/edit" method="POST">
        <input type="text" name="id" placeholder="id" value="<%= id %>" required><br>
        <input type="text" name="fname" placeholder="Nama Depan" value="<%= fname %>" required><br>
        <input type="text" name="lname" placeholder="Nama Belakang" value="<%= lname %>" required><br>
        <input type="text" name="email" placeholder="Email" value="<%= email %>" required><br>
        <select name="gender" required>
            <option value="" disabled selected>--select your gender--</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select><br>
        <input type="text" name="birthdate" placeholder="Birtdate dd/mm/yy" value="<%= birthdate %>" required><br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>