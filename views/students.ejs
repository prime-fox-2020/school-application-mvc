<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Students</title>
</head>
<body>
    <h1 class="text-center">This is our students:</h1>
    <nav id="navbar" class="navbar navbar-light bg-light">
        <form class="form-inline mx-auto">
            <button onclick="location.href = '/';" class="btn btn-outline-success mx-2" type="button">Home</button>
            <button onclick="location.href = '/teachers';" class="btn btn-outline-success mx-2" type="button">Teachers</button>
            <button onclick="location.href = '/students';" class="btn btn-outline-success mx-2" type="button">Students</button>
            <button onclick="location.href = '/subjects';" class="btn btn-outline-success mx-2" type="button">Subjects</button>
        </form>
    </nav>
    <br>

    <button onclick="location.href = '/students/add';" class="btn btn-outline-success navbar mx-auto" type="button">Add students</button>
    
    <% if(msg) { %>
        <br><div class="alert alert-success text-center role="alert">
            <%= msg %>
        </div>
    <% } %>

    <div class="container">
        <% if (studentList.length >0) { %>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                    <% const keys = Object.keys(studentList[0]) %>
                    <% for (let key of keys) { %>
                        <th scope="col"><%= key %></th>
                    <% } %>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let [i, student] of studentList.entries()) { %>
                    <tr>
                        <% const values = Object.values(student) %>
                        <% for (let data of values) { %>
                        <td><%= data %></td>
                        <% } %>
                        <td>
                            <a href="/students/edit/<%=student.id%>" class="btn btn-primary" role="button" aria-pressed="true">Edit</a>
                            <a href="/students/delete/<%=student.id%>" class="btn btn-warning" role="button" aria-pressed="true">delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>