<!DOCTYPE html>
<html>

<head>
  <title>School App 0.1</title>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <meta charset="UTF-8">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
  <div class="container">
    <h1 class="center-align">School App 0.1</h1>
    <h3>Students Data</h3>

    <table class="highlight">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Option</th>
        </tr>
      </thead>

      <tbody>
        <% data.forEach(s => { %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.first_name %></td>
          <td><%= s.last_name %></td>
          <td><%= s.email %></td>
          <td><a href="/students/<%= s.id %>/edit">Edit</a> | <a href="/students/<%= s.id %>/delete">Delete</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <br>
    <a href="/students/add" class="waves-effect waves-light btn"><i class="material-icons right">add</i>Add Student</a>
  </div>
</body>

</html>